              auth="Container"
              type="javax.sql.DataSource"
              username="root"
              password="root"
              driverClassName="com.mysql.jdbc.Driver"
              connectionProperties="useUnicode=yes;characterEncoding=utf8;"
              url="jdbc:mysql://localhost:3306/bootcamp"
              maxTotal="100"
              maxIdle="30"
              maxWaitMillis="10000" />
</Context>